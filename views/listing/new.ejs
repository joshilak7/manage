<% layout("/layouts/plateout") %>
<link rel="stylesheet" href="/css/style.css" />
<title>New Route</title>
<body style="scroll-behavior: smooth; height: 100vh">
  <div class="row">
    <div class="col-8 offset-3">
      <form action="/listi" method="POST" class="needs-validation" novalidate>
        <h1 style="margin-top: 40px">Add Listing</h1>
        <div class="mb-3">
          <label for="title" class="label">Title</label>
          <input
            type="text"
            name="title"
            placeholder="Title"
            class="form-control"
            id="validationCustom01"
            required
          />
        </div>
        <div class="mb-3">
          <label for="description" class="label">Description</label>
          <textarea
            name="description"
            id="description"
            placeholder="Description"
            style="width: 100%; height: 100px"
            class="form-control"
            id="validationCustom01"
            required
          ></textarea>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              name="price"
              id="price"
              placeholder="Price"
              class="form-control"
              class="form-control"
              id="validationCustom01"
              required
            />
          </div>

          <div class="mb-3 col-md-4">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="country"
              id="country"
              placeholder="Country"
              class="form-control"
              class="form-control"
              id="validationCustom01"
              required
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="label">Location</label>
          <input
            type="text"
            name="location"
            placeholder="Location"
            style="width: 50%"
            class="form-control"
            id="validationCustom01"
            required
          />
        </div>
        <div class="mb-3">
          <label for="img" class="label">Image URL</label>
          <input
            type="text"
            name="img"
            placeholder="Image URL"
            style="width: 70%"
            class="form-control"
            id="validationCustom01"
          />
        </div>
        <button type="submit" class="btn btn-dark add-btn mb-3">Add</button>
      </form>
    </div>
  </div>
</body>
